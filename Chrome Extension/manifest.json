{
  "name": "Mix Controller",
  "version": "0.0.22",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "description": "Connect to pumps to control mix ratio and output speed",
  "author": "Ben Veenema - Veenema Design Works",

  "app": {
    "background": {
      "scripts": [ "js/background.js" ]
    }
  },

  "icons": {
    "16": "assets/icon-16x16.jpeg",
    "128": "assets/icon-128x128.jpeg"
  },

  "permissions": [
    "serial"
  ]
}
